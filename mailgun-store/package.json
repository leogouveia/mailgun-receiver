{
  "name": "mailgun-store",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "webpack -w",
    "test": "jest",
    "build": "NODE_ENV=${NODE_ENV:-production} webpack",
    "package": "sam package --template-file ../template.yaml --s3-bucket $npm_package_name-${STAGE:-dev} --output-template-file template.packaged.yaml",
    "deploy": "sam deploy --template-file template.packaged.yaml --stack-name $npm_package_name-${STAGE:-dev} --capabilities CAPABILITY_IAM --parameter-override Stage=${STAGE:-dev} ProjectName=$npm_package_name --no-fail-on-empty-changeset",
    "clean": "rm -rf -v dist/*"
  },
  "author": "Leonardo de Albuquerque Gouveia",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.40",
    "@types/chai": "^4.2.8",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.7.0",
    "aws-sdk": "^2.610.0",
    "chai": "^4.2.0",
    "mocha": "^7.0.1",
    "ts-jest": "^25.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.7.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "yaml-cfn": "^0.2.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
